filter {
    mutate {
        remove_tag => ["_grokparsefailure"]
    }
    if [type] == "syslog" {
        if [program] == "nova.compute.claims" {
            grok {
                patterns_dir => "/opt/logstash/patterns"
                match => { "openstack_message" => "%{NOVA_CLAIMS_SUMMARY_PHYS}" }
                add_tag => ["nova_phys_claim"]
                add_field => ["state", "physical"]
            }
            mutate {
                remove_tag => ["_grokparsefailure"]
            }
            grok {
                patterns_dir => "/opt/logstash/patterns"
                match => { "openstack_message" => "%{NOVA_CLAIMS_SUMMARY_VIRT}" }
                add_tag => ["nova_virt_claim"]
                add_field => ["state", "virtual"]
            }
            mutate {
                remove_tag => ["_grokparsefailure"]
            }
            grok {
                patterns_dir => "/opt/logstash/patterns"
                match => { "openstack_message" => "%{NOVA_INSTANCE_REQUEST}" }
                add_tag => ["nova_claim_request"]
            }
            mutate {
                remove_tag => ["_grokparsefailure"]
            }
            if ("nova_phys_claim" in [tags] or "nova_virt_claim" in [tags] or "nova_claim_request" in [tags]) {
                clone {
                    clones => ["nova_claims"]
                    remove_field => [ syslog5424_pri, syslog5424_host, syslog_ts, log_message, pid, loglevel,
                                      syslog_severity_code, syslog_facility_code,
                                      syslog_severity, syslog_facility, program, timestamp,
                                      openstack_message, request_id, instance_id,
                                      request_id_list, message, tags ]
                    add_field => ["creation_time", "%{@timestamp}"]
                }
            }
        } else {
            mutate {
                add_tag => ["filter_37_fail"]
            }
        }
    }
}
