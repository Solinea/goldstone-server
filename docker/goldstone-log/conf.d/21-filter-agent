# a celery task push looks like this:
# 
# body: base64 encoded task, args, kwargs fields
# headers: empty dict
# content-type: "application/json"
# properties: 
# "{\"body\": \"\", \"headers\": {}, \"content-type\": \"application/json\", \"properties\": {\"body_encoding\": \"base64\", \"correlation_id\": \"5f4e3f91-48e3-40db-bc96-79ad2efabc51\", \"reply_to\": \"eff2c3d8-7213-3848-a702-74252ed12cab\", \"delivery_info\": {\"priority\": 0, \"routing_key\": \"default\", \"exchange\": \"default\"}, \"delivery_mode\": 2, \"delivery_tag\": \"86dfdb87-80fa-4d63-b0d7-0291ce9db07b\"}, \"content-encoding\": \"utf-8\"}"

filter {
    if [type] == "agent" {
        # is this a file integrity monitor event?
        if [fim]  {
            uuid {
                target => ["id"]
            }
            ruby {
                code => "require 'base64';
                         event['body'] = { :args => event['fim'].values_at('meta', 'doc'), :task => 'goldstone.compliance.tasks.process_fim_event', :id => event['id'] };
                         event['body'] = Base64.encode64(event['body']);
                         event['content-type'] = 'application/json';
                         event['properties'] = 'xyz'"
                remove_field => [ "fim", "@timestamp", "@version", "id" ]
            }
        }
    }
}
