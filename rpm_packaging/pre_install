yum install wget

wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
yum localinstall -y remi-release-6*.rpm epel-release-6*.rpm

cat <<- EOF > /etc/yum.repos.d/logstash
    [logstash-1.4]
    name=logstash repository for 1.4.x packages
    baseurl=http://packages.elasticsearch.org/logstash/1.4/centos
    gpgcheck=1
    gpgkey=http://packages.elasticsearch.org/GPG-KEY-elasticsearch
    enabled=1
EOF

cat <<- EOF > /etc/yum.repos.d/elasticsearch
    [elasticsearch-1.2]
    name=Elasticsearch repository for 1.2.x packages
    baseurl=http://packages.elasticsearch.org/elasticsearch/1.2/centos
    gpgcheck=1
    gpgkey=http://packages.elasticsearch.org/GPG-KEY-elasticsearch
    enabled=1
EOF
