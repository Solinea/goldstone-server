[Unit]
Description=Goldstone Server
Requires=docker.service
After=docker.service

[Service]
Restart=always
User=root
Group=root
ExecStart=/opt/goldstone/bin/docker-compose -f /opt/goldstone/docker/docker-compose.yml up -d
ExecStop=/opt/goldstone/bin/docker-compose -f /opt/goldstone/docker/docker-compose.yml stop

[Install]
WantedBy=local.target
