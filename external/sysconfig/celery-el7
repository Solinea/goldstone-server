# See
# http://docs.celeryproject.org/en/latest/tutorials/daemonizing.html#available-options

DJANGO_SETTINGS_MODULE="goldstone.settings.production"
CELERY_APP="goldstone"

# Worker settings
CELERYD_NODES="w1"
CELERYD_OPTS="--time-limit=300 --concurrency=8"
CELERYD_LOG_FILE="/var/log/goldstone/celery-%N.log"
CELERYD_STATE_DIR="/var/run/celery"
CELERYD_PID_FILE="/var/run/celery/goldstone-%N.pid"
CELERYD_LOG_LEVEL="INFO"

# Beat settings

CELERYBEAT_LOG_FILE="/var/log/goldstone/celerybeat.log"
CELERYBEAT_STATE_DIR="/var/run/celerybeat"
CELERYBEAT_PID_FILE="/var/run/celerybeat/goldstone-celerybeat.pid"
CELERYBEAT_LOG_LEVEL="INFO"
CELERYBEAT_SCHEDULE="/var/run/celerybeat/goldstone-schedule"
CELERYBEAT_WORK_DIR="/opt/goldstone"
