#
# minimally try to get the host as known to syslog and replace
# the logstash host value with it.
#
filter {
    if ([type] == "syslog" and "processed" not in [tags]) {
        grok { 
            remove_tag => "_grokparsefailure"
            patterns_dir => "/opt/logstash/patterns"
            match => { "message" => "%{GENERIC_SYSLOGLINE}" }
            add_field => { "received_at" => "%{@timestamp}" }
        }
        if ("_grokparsefailure" not in [tags]) {
            syslog_pri {
                syslog_pri_field_name => "syslog5424_pri"
            }
            mutate {
                rename => [ "msg", "message" ]
                rename => [ "syslog5424_host", "host" ]
                remove_field => "syslog_ts"
                remove_field => "syslog5424_pri"
                remove_field => "msg"
                add_tag => ["filter_50", "syslog_generic"]
            }
        }
    }
}

