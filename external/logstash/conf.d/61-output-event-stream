output {
    if [type] == "event_stream" {
    	# stdout { codec => rubydebug }
        celery_redis_task {
                name => "event_stream"
	        redis_host => ["127.0.0.1"]
	        key => "event_stream"
	        celery_task => "goldstone.apps.logging.tasks.process_event_stream"
	        celery_routing_key => "event_stream.#"
	        celery_task_args => ["@timestamp", "host", "event_type", "message"]
        }
    }
}
